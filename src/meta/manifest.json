{
    "manifest_version": 2,
    "name": "Ukraïnsjka Latynka | Українська латинка",
    "short_name": "Latynka",
    "author": "Pavel paiv Ivashkov",
    "description": "__MSG_extension_description__",

    "version": "0.0.0",

    "default_locale": "en",
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "background": {
    },

    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*", "file:///*"],
            "run_at": "document_start",
            "all_frames": true,
            "js": ["js/content.js"]
        },
        {
            "matches": ["https://paiv.github.io/latynka/v1*"],
            "run_at": "document_end",
            "js": ["js/github_v1.js"]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "permissions": [
        "storage",
        "activeTab"
    ]
}
